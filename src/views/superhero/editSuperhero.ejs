<section>
    <h1>Editar Superheroe</h1>
    <form action="/api/heroes/editar/<%= superheroe.id %>?_method=PUT" method="POST">
        
        <label for="nombreSuperHeroe">Nombre del Superheroe</label>
        <input type="text" name="nombreSuperHeroe" id="nombreSuperHeroe" required minlength="3" maxlength="60" value="<%= superheroe.nombreSuperHeroe %>"><!---->
        <br>
        <label for="nombreReal">Nombre Real</label>
        <input type="text" name="nombreReal" id="nombreReal" required minlength="3" maxlength="60" value="<%= superheroe.nombreReal %>"><!---->
        <br>
        <label for="edad">Edad</label>
        <input type="number" name="edad" id="edad" required min="0" value="<%= superheroe.edad %>"><!---->
        <br>
        <label for="planetaOrigen">Planeta de Origen</label>
        <input type="text" name="planetaOrigen" id="planetaOrigen" value="<%= superheroe.planetaOrigen %>"><!---->
        <br>
        <label for="debilidad">Debilidad</label>
        <input type="text" name="debilidad" id="debilidad" value="<%= superheroe.debilidad %>"><!---->
        <br>
        <label for="poderes">Poderes</label>
        <input type="text" name="poderes" id="poderes" required value="<%= superheroe.poderes %>"><!---->
        <br>
        <label for="aliados">Aliados</label>
        <input type="text" name="aliados" id="aliados" value="<%= superheroe.aliados %>"><!---->
        <br>
        <label for="enemigos">Enemigos</label>
        <input type="text" name="enemigos" id="enemigos" value="<%= superheroe.enemigos %>"><!---->
        <br>

        <button type="submit">Actualizar</button>

    </form>
</section>